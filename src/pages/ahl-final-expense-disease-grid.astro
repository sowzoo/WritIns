<script>
	document.querySelectorAll("p.title").forEach((title) => {
		title.addEventListener("click", () => {
			const content = title.nextElementSibling;
			if (content && content.classList.contains("content")) {
				content.classList.toggle("open");
			}
		});
	});
</script>

<Layout title="Welcome to Astro.">
	<main>
		<div class="container mx-auto max-w-7xl">
			<div class="two columns question">
				<div class="sidebar">
					<div class="sb-title">
						<table class="statustab w-full">
							<tr class="flex w-full justify-between">
								<td>
									<img class="max-h-10" src="https://placehold.co/100x179" />
								</td>
								<td class="titletd">AHL Final Expense Disease</td>
							</tr>
						</table>
					</div>
					<div class="docs section-container accordion bg-white" data-section="">
						<section class="section">
							<p class="p-2">
								<span class="text-green-500">Green </span>{"="}Preferred,
								<span class="text-amber-500">Orange</span>{"="}Modified,
								<span class="text-blue-500">Standard</span>{"="}Standard,
								<span class="text-red-500"> Red</span>{"="}Decline
							</p>
							<div></div>

							{
								medicalConditions.map((condition) => (
									<section class="section">
										<p class="title">
											<Icon name="chevronDown" />
											{condition.condition}
										</p>
										<div class="content bg-white">
											<ul class="side-nav">
												{condition.criteria.map((criterion) => (
													<li>
														<p>
															{criterion.description} =
															{criterion.preferred === "X" && (
																<span class="text-green-500">Preferred</span>
															)}
															{criterion.standard === "X" && (
																<span class="text-blue-500">Standard</span>
															)}
															{criterion.modified === "X" && (
																<span class="text-amber-500">Modified</span>
															)}
															{criterion.decline === "X" && (
																<span class="text-red-500">Decline</span>
															)}
														</p>
													</li>
												))}
											</ul>
										</div>
									</section>
								))
							}
						</section>
					</div>
				</div>
			</div>
		</div>
	</main>
</Layout>

